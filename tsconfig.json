{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "@playwright/test"
    ]
  },
  "include": [
    "playwright.config.ts",
    "tests/**/*.ts",
    "helpers/**/*.ts"
  ]
}